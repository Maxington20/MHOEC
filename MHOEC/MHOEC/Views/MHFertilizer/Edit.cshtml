@model MHOEC.Models.Fertilizer

@{
    ViewData["Title"] = "Edit Fertilizer";
}

<h2>Edit Fertilizer</h2>

<h4>Fertilizer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <table>
                <tr>
                    <td style="padding:0.5em;">
                        <b>FertilizerName</b>
                    </td>
                    <td>
                        <input type="text" asp-for="FertilizerName" disabled />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="Oecproduct" /> @Html.DisplayNameFor(model => model.Oecproduct)
                                </label>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="Liquid" /> @Html.DisplayNameFor(model => model.Liquid)
                                </label>
                            </div>
                        </div>

                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
