@model IEnumerable<MHOEC.Models.Variety>

@{
    ViewData["Title"] = "Index";
}

<h2>Varieties of @ViewBag.cropName</h2>

<p>
    <a asp-action="Create" asp-route-cropId="@ViewBag.cropId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Crop)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="MHPlots" asp-action="Index" asp-route-varietyId="@item.VarietyId" asp-route-varietyName="@item.Name">@Html.DisplayFor(modelItem => item.Name)</a> 
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Crop.CropId)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.VarietyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VarietyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VarietyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
