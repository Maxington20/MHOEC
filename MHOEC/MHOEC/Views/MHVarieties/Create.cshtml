@model MHOEC.Models.Variety

@{
    ViewData["Title"] = "Create";
}

<h2>Create @ViewBag.cropName Variety</h2>

<h4>Variety</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="CropId" class="control-label"></label>*@
                <input type="hidden" asp-for="CropId" class="form-control" value="@TempData["cropId"]" />
                @*<select asp-for="CropId" class ="form-control" asp-items="ViewBag.CropId"></select>*@
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-cropId="@ViewBag.cropId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
